{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "traits": {
      "additionalProperties": false,
      "properties": {
        "email": {
          "format": "email",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "webauthn": {
                "identifier": true
              },
              "totp": {
                "account_name": true
              }
            },
            "recovery": {
              "via": "email"
            },
            "verification": {
              "via": "email"
            }
          },
          "title": "Email address",
          "type": "string",
          "maxLength": 320
        },
        "name": {
          "minLength": 1,
          "title": "Name",
          "type": "string",
          "maxLength": 256
        }
      },
      "required": [
        "email",
        "name"
      ],
      "type": "object"
    }
  },
  "title": "Person",
  "type": "object"
}
