{
  "$id": "https://schemas.ory.sh/kratos/selfservice/strategy/password/login.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "password",
    "method"
  ],
  "properties": {
    "csrf_token": {
      "type": "string"
    },
    "password": {
      "type": "string",
      "minLength": 1
    },
    "password_identifier": {
      "type": "string",
      "minLength": 1
    },
    "method": {
      "type": "string"
    }
  },
  "if": {
    "properties": {
      "password_identifier": {
        "minLength": 1
      }
    },
    "required": [
      "password_identifier"
    ]
  },
  "then": {
    "required": [
      "password_identifier"
    ]
  },
  "else": {
    "required": [
      "identifier"
    ]
  }
}
