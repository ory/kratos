{
  "$id": "https://example.com/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "ory.sh/kratos": {
            "mappings": {
              "identity": {
                "traits": [
                  {
                    "path": "email"
                  }
                ]
              }
            }
          }
        },
        "names": {
          "type": "array",
          "items": {
            "type": "string",
            "ory.sh/kratos": {
              "mappings": {
                "identity": {
                  "traits": [
                    {
                      "path": "names.-1"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "required": [
        "email"
      ],
      "additionalProperties": false
    }
  }
}
