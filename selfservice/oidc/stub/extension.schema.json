{
  "$id": "https://example.com/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "hive": {
        "mappings": {
          "identity": {
            "traits": [
              {
                "path": "email"
              }
            ]
          }
        }
      }
    },
    "names": {
      "type": "array",
      "items": {
        "type": "string",
        "hive": {
          "mappings": {
            "identity": {
              "traits": [
                {
                  "path": "names.-1"
                }
              ]
            }
          }
        }
      }
    }
  },
  "required": [
    "email"
  ],
  "additionalProperties": false
}
