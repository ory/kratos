{
  "$id": "https://example.com/registration.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits":{
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            }
          }
        },
        "name": {
          "type": "string",
          "format": "email",
          "minLength": 10
        },
        "stringy": {
          "type": "string"
        },
        "numby": {
          "type": "number"
        },
        "booly": {
          "type": "boolean"
        },
        "should_big_number": {
          "type": "number",
          "minimum": 1200
        },
        "should_long_string": {
          "type": "string",
          "minLength": 25
        }
      }
    }
  }
}
