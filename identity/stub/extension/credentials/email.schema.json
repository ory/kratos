{
  "$id": "https://schemas.ory.sh/presets/kratos/identity.email.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "title": "E-Mail",
      "ory.sh/kratos": {
        "credentials": {
          "password": {
            "identifier": true
          },
          "webauthn": {
            "identifier": true
          },
          "totp": {
            "account_name": true
          },
          "code": {
            "identifier": true,
            "via": "email"
          },
          "passkey": {
            "display_name": true
          }
        },
        "recovery": {
          "via": "email"
        },
        "verification": {
          "via": "email"
        }
      },
      "maxLength": 320
    }
  },
  "required": [
    "email"
  ],
  "additionalProperties": false
}
