{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["traits", "metadata_admin", "metadata_public"],
  "properties": {
    "traits": {
      "type": "object",
      "additionalProperties": false,
      "required": ["email"],
      "properties": {
        "email": {
          "type": "string",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        }
      }
    },
    "metadata_public": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": {}
      }
    },
    "metadata_admin": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": {}
      }
    }
  }
}
